@charset "utf-8";
/* CSS Document */
.nav{
		width:100%;
		height:80px;
		background:#000000;
	}
	.nav-as{
		margin-left:80px;
	}
	.nav-as li{
		list-style:none;
		display:inline-block;
		height:60px;
		line-height:80px;
		text-align:center;
		vertical-align:middle;
	}
	.nav-as li a{
		display:inline-block;
		text-decoration:none;
		margin-left:20px;
		font-family:"华文隶书";
		font-size:30px;
		color:#CCCCCC;
	}
	.nav-as li a:hover{
		background-color:#FFFFFF;
		opacity:0.5;
		color:#000000;
	}
	.nav-cs{
		float:right;
		margin-top:10px;}
	.nav-cs a{
		float:right;
		list-style:none;
		display:inline-block;
		margin-right:30px;
		
	}
	#logo.logo{
	float:left;
	height:84px;
	width:126px;
	margin-left:10px;
	}
	.sea{
	
		height:30px;
		width:260px;
