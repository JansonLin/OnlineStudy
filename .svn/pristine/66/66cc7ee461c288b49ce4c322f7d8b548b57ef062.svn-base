@CHARSET "UTF-8";
*{
	margin:0;
	padding:0;
	/* font-family: "微软雅黑"; */
	/* font-size: 12px; */
	
}
.abcd {
	width: 470px;
	height: 430px;
	border: solid 1px #ddd;
	background: #ffffff;
	position: absolute;
	left: 50%;
	/*top：42%;*/
	margin-left: -195px;
	margin-top: 100px;
	display: none;
	z-index:2;
	border-radius:10px;
}
.abcd h2{
	background-color: #98fb98;

	-webkit-border-radius: 20px 20px 0 0;

	-moz-border-radius: 20px 20px 0 0;

	border-radius: 20px 20px 0 0;

	color: #fff;

	font-size: 28px;

	padding: 20px 26px;
	
}

