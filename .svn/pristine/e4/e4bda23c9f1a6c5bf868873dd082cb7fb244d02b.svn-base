<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>管理员主页面</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	-->

  <style type="text/css">
	*{
		padding: 0;
		margin:0; 
	}
	#top_frame{
		width: 100%;
		height: 80px;
		background-color: #000;

	}
	#log{
		padding-top: 20px;
		color: #fff;
		font-size: 32px;
		font-family: "隶书";
		float: left;
		margin-left: 20px;

	}
	#main_menu{
		float: right;
		margin-right: 20px;
	}
	#main_menu ul{
		
	}
	#main_menu li{
		float: left;
		list-style:none;
		margin-left: 10px;
	}
	#main_menu a{
		padding-top: 20px;
		display: inline-block;
		height: 60px;
		font-size: 32px;
		font-family: "隶书";
		color: #fff;
		text-decoration:none;  
	}
	#main_menu a:hover{
		 color: #ee0;
		 background-color: #333;
	}
	#left_frame{
		font-family:"隶书";
		padding-top:5px;
		background-color: #f2f2f2;
		width: 12%;
		float: left;
		min-height: 400px;
		color:#666;
		font-size:18px;
		text-align:center;
		border-right: 1px solid #e5e5e5;
		overflow:hidden;
	}
	#main_frame{
		background-color: #fff;
		float: right;
		min-height:600px;
		min-width:1000px;
		margin-top:10px;
		border:1px solid #f2f2f2;
		width:87%;
	}
	#left_frame ul{
		width: 100%;
	}
	#left_frame li{
		width: 100%;
		list-style-type:none;
		border-bottom: 1px solid #e5e5e5;
		border-width:1px 0;
		padding-left:10px;
		text-align: left;
	}
	#left_frame a{
		padding-left:0 16 0 20;
		width:100%;
		display:block;
		height: 44px;
		line-height:44px;
		color:#666;
		text-decoration: none;
	}
	#second1{
		background-color: #fff;

	}
	#second2{
		background-color: #fff;

	}
	#second3{
		background-color: #fff;

	}
	#second1 a,#second2 a,#second3 a{
		padding-left:18px;
	}
	#left_frame .clearBorder{
		border:0px;
	}
	.icon-font{
			font-size:14px;
			margin-right:3px;
	}
}

.icon-font {
	font-family: 'icomoon';
	speak: none;
	font-weight: 400;
	font-style: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	-webkit-font-smoothing: antialiased;
}
.content_container{
			min-height:600px;
			min-width:1000px;
}
	</style>
  </head>
  
  <body>
    <div id="top_frame">
		<span id="log">在线学习平台管理系统</span>
		<span id="main_menu">
			<ul >
				<li><a href="#">管理员</a></li>
				<li><a href="#">修改密码</a></li>
				<li><a href="#">退出</a></li>
			</ul>
		</span>
    </div>
    <div id="left_frame">
		<ul>
			<li style="text-align:center;font-weight:bolder;font-size:28px;">菜&nbsp;&nbsp;单</li>
			<li>
				<ul>
					<li><a href="javascript:changeMenu(1)"><span class="icon-font">&#xe022;</span>学生管理</a></li>
					<li id="second1">
						<ul>
							<li><a href="student/addstudent.jsp" target="right"><span class="icon-font">&#xe020;</span>添加学生信息</a></li>
							<li><a href="student/studentlist.jsp" target="right"><span class="icon-font">&#xe018;</span>查看学生信息</a></li>
						</ul>
					</li>
					<li><a href="javascript:changeMenu(2)"><span class="icon-font">&#xe016;</span>课程管理</a></li>
					<li id="second2">
						<ul>
							<li><a href="book/addbook.jsp" target="right"><span class="icon-font">&#xe014;</span>添加课程信息</a></li>
							<li><a href="book/booklist.jsp" target="right"><span class="icon-font">&#xe012;</span>查看课程信息</a></li>
						</ul>
					</li>
					<li><a href="list.jsp" target="right"><span class="icon-font">&#xe026;</span>系统管理</a></li>
				</ul>
			</li>
		</ul>
    </div>
    <div id="main_frame">
    	<iframe width="100%" class="content_container" height="100%" frameborder="0" scroll="auto" name="right" src="comment.jsp">
    	</iframe>
    </div>
  </body>
  <script type="text/javascript">
  for(var i=1;i<=3;i++){
  		document.getElementById("second"+i).style.display="none";
  	}  
  function changeMenu(index){

  	for(var i=1;i<=3;i++){
  		if(index==i)
  			document.getElementById("second"+i).style.display="block";
  		else
  			document.getElementById("second"+i).style.display="none";
  	}
  }
  </script>
</html>
