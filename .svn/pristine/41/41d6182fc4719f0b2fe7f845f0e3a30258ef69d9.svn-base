/* CSS Document */

*{
	margin:0;
	padding:0;
}
	.nav{
		width:100%;
		height:80px;
		background-color:#000000;
	}
	.nav-as{
		margin-left:80px;
	}
	.nav-as li{
		list-style:none;
		display:inline-block;
		height:60px;
		line-height:80px;
		text-align:center;
		vertical-align:middle;
	}
	.nav-as li a{
		display:inline-block;
		text-decoration:none;
		margin-left:20px;
		font-family:"STLiti";
		font-size:30px;
		color:#CCCCCC;
	}
	.nav-as li a:hover{
		background-color:#FFFFFF;
		opacity:0.5;
		color:#000000;
	}
	.nav-cs,.nav-cs a{
		list-style:none;
		display:inline-block;
		float:right;
		margin-right:30px;
		line-height:80px;
	}
	
		.nav-cs{
		margin-left:240px;
		float:right;
	
	}
	.txt{
		margin-left:360px;
		height:30px;
		width:280px;
		border-radius:10px;
		}
	#btn{
		height:30px;
		width:30px;
		margin-left:-40px;
		margin-bottom:-10px;
	}
	#btn:hover{
		cursor:pointer;
	}
	#btn:hover input{ 
		border:0;
	}
	
	
