<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ page import="entity.Direction" %>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<%
	ArrayList<Direction> direction=(ArrayList<Direction>)session.getAttribute("direction");
%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>方向栏设置</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	-->
	<link rel="stylesheet" type="text/css" href="css/studentList.css">
	
<script>
window.onload=function(){
var oTab=document.getElementById('table1');
var oldColor='';
	for(var i=0;i<oTab.tBodies[0].rows.length;i++){
		oTab.tBodies[0].rows[i].onmouseover=function(){
			oldColor=this.style.background;  
			this.style.background='#CC9999';
		};
		oTab.tBodies[0].rows[i].onmouseout=function(){
			this.style.background=oldColor;   //鼠标移出后恢复原来颜色
		};
		if(i%2){
		oTab.tBodies[0].rows[i].style.background='#CCCC99';	
		}
		else{
			oTab.style.background='#CCFFCC';
		}
	}
};
	
</script>
	

  </head>
  
  <body>
	<div class="nav"><span class="icon-font"></span><span>方向栏管理</span><span>&gt</span><span>方向栏列表</a></span></div>
	<form method="post" action="../../servlet/TabBarsServlet?op=addDirection">
		添加新方向<input type="text" name="addDirection" id="addDirection"  /><input type="submit" value="添加" />
	</form>
		
   <table cellspacing="0" class="table1" id="table1">
	<thead class="thead1">
    	<tr><th class="th1"><input type="checkbox" name="first" id="sel" class="lab"/></th>
	    	<th>ID</th>
	    	<th>方向名</th>
	    	<th class="th2">操作</th>
	    </tr>
	  </thead>  
		<%
			if(null==direction)
				response.sendRedirect("../../servlet/TabBarsServlet?op=directionList");
			else{
				for(int i=0;i<direction.size();i++){
					Direction d=direction.get(i);
		%>
		 <tbody class="tbody1">
					<tr class="ele1">
						<td class="td1"><input type="checkbox" name="first"/></td>
						<td><%=d.getDir_ID()%></td>
						<td><%=d.getDir_Name()%></td>
						<td class="td2">
							<a href="servlet/TabBarsServlet?op=getDirection&id=<%=d.getDir_Name()%>">修改</a>
					    	<a href="javascript:confDel(<%=d.getDir_ID()%>)">删除</a>
					    </td>
				    </tr>
				    
		  </tbody>
	    <%
	    	}
	    }
	    %>
    </table>
    
    <script type="text/javascript">
	
	$(function(){
		$(".lab").click(
			function(){
				if(this.checked)
				 $("input:checkbox").attr("checked", "checked");  
				else
				 $("input:checkbox").removeAttr("checked");  
			}
		);
		
		
		$(".ele1").mouseover(
			function(){
				$(this).css("background-color","#e5e5e5"); 
			}			
		);
		$(".ele1").mouseout(				
			function(){
				$(this).css("background-color","#fff"); 
			}
		);
	});

	function Search1(){
		var i=document.getElementById("sel").value;
		var j=document.getElementById("search").value;
		location="servlet/TabBarsServlet?op=sea&i="+i+"&j="+j;
	}
	
	function confDel(id){
	  	if(confirm("确定要删除吗？")){
	 		location="servlet/TabBarsServlet?op=del&id="+id;
	  	}
  	}
	</script>
  </body>
</html>
