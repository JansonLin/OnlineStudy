     function  CheckValidate(){
     var Pass=document.getElementById("pass");
     var ConfirmPass=document.getElementById("confirmpass");
     if(Pass.value!=ConfirmPass.value){
      /*  document.getElementById("mes").innerHTML="两次密码不一样";
