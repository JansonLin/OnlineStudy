/* CSS Document */

*{
		margin:0;
		padding:0;
	}
    body{
	width:100%;
	height:800px;
	background-color:rgba(226, 243, 128, 0.25);
	}
     .nav{
		width:100%;
		height:74px;
		background-color:#FFFFFF;
	}
	.nav-as{
		margin-left:40px;
	}
	.nav-as li{
		list-style:none;
		display:inline-block;
		margin-left:30px;
		line-height:80px;
	}
	.nav-as li a{
		display:inline-block;
		height:60px;
		width:60px;
		text-decoration:none;
		font-family:"STLiti";
		font-size:28px;
		color:#000000;
	}
	.nav-as li a:hover{
	text-align:center;
	vertical-align:middle;
	background:#CCCCCC;
	opacity:0.7;
	}
	.nav-cs{
		float:right;
		}
	.nav-cs a{
		list-style:none;
		display:inline-block;
		margin-right:30px;
		line-height:80px;
	}
		.sea{
		height:50px;
		width:260px;
		/*border:1px #00FF00 solid;*/
		border:none;
		background-color:transpartent;
	    margin-top:15px;
		margin-left:480px;
		text-align:center;
       /* background-color:rgba(255,69,0,.7);*/
		border-radius:5px;
	}
	
	#search{
		display:inline-block;
		bottom:5px;
		height:30px;
		width:200px;
		border:0;
		/*background-color:#000000;
		opacity:0.5;*/
		border-bottom:1px #000000 solid;
		border-radius:10px;
	}
	#btn1{
	height:30px;
	width:30px;
	background:url(../images/btn.png);
	border:0;
	margin-left:-40px;
	border-radius:10px;
	}
	#btn1:hover input{
		border:0;
	}

	   .box{
   		width:260px;
		height:500px;
		margin-top:26px;
		margin-left:100px;
		background-color:rgba(7,17,27,5);
		border-radius:15px 0 0 15px;
		overflow:hidden;
		font-family:"SimSun";
		font-size:20px;
		box-shadow:10px 10px 25px #ccc;
		
	}
	.box a{
		text-decoration:none;
		color:#CCCCCC;
	}
	
	.box-as{
			width:200px;
			height:420px;
			padding-left:20px;
			
	}
	.box-as li {
		display:block;
		line-height:60px;
		list-style:none;
	}
	.box-ul{
	    display:none;
		margin-left:240px;
		margin-top:164px;
	    top:15px;
		width:700px;
		height:500px;
		text-align:left;
		padding-top:30px;
		padding-left:20px;
		border-radius:0 15px 15px 0;
		border:1px solid #B0B0B0;
		position:absolute;
		z-index:2;
		}
	.box-ul li{
		line-height:40px;
    }
    .box-ul li a{margin-left:8px;}
	.box-es{
		display:block;
		margin-top:10px;
		margin-bottom:10px;
		line-height:60px;
		width:260px;
	}
	.box-as li:hover .box-es a{
	   color:#FFFFFF;
	   }
	.box-as li:hover .box-ul{
	    display:block;
		cursor:pointer;
		background-color:#309;
		position:absolute;
	}
	
	.box-as li:hover .box-es{
		background-color:#999999;
		opacity:0.8;
		border-radius:5px;
		cursor:pointer;
	  }
		.box-ul li a:hover{
		display:inline-block;
		transform:scale(1.3);
		color:#FF0000;
		}
	.box-ul li a{
		color:#000000;
	}
	font{
		float:right;
		padding-right:40px;
		color:#FFFFFF;
	}
	.main{
		padding-top:80px;
		width:100%;
		height:100%-74px;
	}
	#logo.logo{
	float:left;
	height:74px;
	width:126px;
	margin-left:10px;
	}
	.sea{
		height:30px;
		width:260px;
	    margin-top:15px;
		text-align:center;
		border-radius:5px;
	}
	
	